%div[current_object]
  %h1.name= h current_object.name
  - if current_object.genre
    = h current_object.genre

  #listing
    %h2= "Songs by #{h current_object.name}:"
    - for song in current_object.lyrics
      %li= link_to h(song.title), lyric_path(song)

#toolbar
  - if @user
    = link_to 'Edit', edit_object_path
    |
    = link_to 'Destroy', object_path, :confirm => 'Really destroy lyric?', :method => :delete
    |
  = link_to 'Back', objects_path