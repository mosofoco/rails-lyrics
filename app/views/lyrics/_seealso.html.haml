- safe_artist = artist.downcase.gsub(/[^a-zA-Z0-9]/,"")
- safe_title = title.downcase.gsub(/[^a-zA-Z0-9]/,"")
- safe_album = album.downcase.gsub(/[^a-zA-Z0-9]/,"")
- cap_artist = artist.gsub(" ","_").gsub(/[^a-zA-Z0-9\_\(\)]/,"")
- cap_title = title.gsub(" ","_").gsub(/[^a-zA-Z0-9\_\(\)]/,"")

%h3 See Also:
